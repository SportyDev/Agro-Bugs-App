<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AgroBugs" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/brand_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/brand_green_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/background_gray</item>
        <item name="colorOnBackground">@color/text_dark</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_dark</item>

        <item name="colorOnSurfaceVariant">@color/brand_green_dark</item>

        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>

